.container {
  background: #f5f5f5;
}

.header {
  height: 320rpx;
  background: rgba(22,152,43,.1);
}

.header .logo {
  display: block;
  margin: 0 auto;
  width: 120rpx;
  height: 120rpx;
}

.header .search {
  display: block;
  margin: 30rpx auto;
  padding: 0 20rpx;
  width: 80%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #a1a1a1;
  background: #fefefe;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.header .menu {
  display: flex;
}

.header .menu navigator {
  flex: 1;
  margin: 0 40rpx;
  padding: 10rpx 0;
  text-align: center;
  font-size: 30rpx;
}

.header .menu .hover {
  color: #fff;
  background: rgba(22,152,43,.2);
}

.tabs {
  padding: 20rpx 30rpx;
}

.tabs scroll-view {
  white-space: nowrap;
  background: #fefefe;
}

.tabs .tab {
  display: inline-block;
  width: 25%;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
}

.tabs .tab.active {
  color: #fff;
  background: rgb(22,152,43);
}

.no-content {
  margin: 20rpx 0;
  text-align: center;
  font-size: 40rpx;
  color: #a1a1a1;
}