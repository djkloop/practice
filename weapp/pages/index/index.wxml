<view class="container">
  <view class="header">
    <image class="logo" src="../../static/img/logo.png" mode="aspectFit" />
    <navigator url="/pages/index/search/search" class="search">搜索主题内容</navigator>
    <view class="menu">
      <navigator hover-class="hover" url="/pages/static/static?type=quick_start">快速开始</navigator>
      <navigator hover-class="hover" url="/pages/static/static?type=api_doc">API文档</navigator>
      <navigator hover-class="hover" url="/pages/static/static?type=about">关于</navigator>
    </view>
  </view>
  <view class="tabs">
    <scroll-view scroll-x>
      <block wx:for="{{tabs}}" wx:key="url">
        <view wx:if="{{item.url === currentTab}}" class="tab active">{{item.name}}</view>
        <view wx:else data-tab="{{item.url}}" class="tab" bindtap="onChangeTab">{{item.name}}</view>
      </block>
    </scroll-view>
  </view>
  <view class="topics" wx:if="{{topics.length > 0}}">
    <topics data="{{topics}}" />
  </view>
  <view wx:else class="no-content">
    <text>暂无内容</text>
  </view>
</view>