<view class="container">
  <navigator wx:if="{{user.id}}" class="acc" url="/pages/user/user?uid={{user.id}}">
    <image src="{{user.avatar}}" />
    <text class="text">{{user.nickname}}</text>
    <text class="practice icon-right"></text>
  </navigator>
  <navigator wx:else class="acc" url="../signin/signin">
    <text class="practice icon-me"></text>
    <text class="text">登录/注册</text>
    <text class="practice icon-right"></text>
  </navigator>
  <view class="action">
    <view class="item" data-type="create" bindtap="handleNavigateTo">我的专栏</view>
    <view class="item" data-type="like" bindtap="handleNavigateTo">我喜欢的</view>
    <view class="item" data-type="collect" bindtap="handleNavigateTo">我的收藏</view>
  </view>
  <view class="action">
    <view class="item">意见反馈</view>
    <view class="item">设置</view>
  </view>
</view>