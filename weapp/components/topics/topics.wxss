.topic {
  display: flex;
  align-items: center;
  padding: 20rpx;
  height: 100rpx;
  background: #fff;
  box-sizing: border-box;
}

.topic .avatar {
  flex: 0 0 60rpx;
  width: 60rpx;
  height: 60rpx;
}

.topic .tag {
  margin-left: 20rpx;
  flex: 0 0 48rpx;
  padding: 4rpx 8rpx;
  background: #e5e5e5;
  color: #999;
  font-size: 24rpx;
  border-radius: 6rpx;
}

.topic .tag.point {
  color: #fff;
  background: #16982b;
}

.topic .title {
  flex: auto;
  margin: 0 20rpx;
  font-size: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.topic .time {
  flex: 0 0 150rpx;
  font-size: 22rpx;
  text-align: center;
}